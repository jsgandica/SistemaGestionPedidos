@model Nikko.SistGestionPedido.UI.Models.ViewModels.LineaPedidoViewModel
@{
    ViewData["Title"] = "Home Page";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.Items;//Producto
    List<SelectListItem> itemsc = (List<SelectListItem>)ViewBag.Items1;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/clstyle.css" rel="stylesheet" />
    <title>Create</title>
</head>
<body>
    <h4>Registro Linea Pedido</h4>
    @*<hr />*@
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <fieldset>
                    <legend>Linea Pedido</legend>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Cantidad" class="control-label"></label>
                        <input asp-for="Cantidad" class="form-control" required />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>                                                           
                    <div>
                        <div class="col-md-12">
                            Producto<Br />
                            @Html.DropDownList("ProductoId", items, "Selecciona..",new {@class = "form-control-mandatory", style="width:100%;height:35px", @required="Required"})
                        </div>
                    </div>
                    <div>
                        <div class="col-md-12">
                            CodigoFactura<Br />
                            @Html.DropDownList("PedidoId", itemsc, "Selecciona..",new {@class = "form-control-mandatory", style="width:100%;height:35px", @required="Required"})
                        </div>
                    </div>
                    <p></p>
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Regresar a Lista de LineaPedidos</a>
    </div>
</body>
</html>




